{
    "extends": [
      "airbnb",
      "airbnb-typescript"
    ],
    "plugins": [
      "react"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ], 
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ] 
        }
      }
    ],
    "rules": {
      "max-classes-per-file": [
        "off",
        1
      ]
    }
  }